@model TagMVC.Models.LoginModel
@{
    ViewBag.Title = "Log in";
}
<script src="~/Scripts/form-validator/jquery.form-validator.js"></script>
<div class="container">
    <div id="loginbox" style="margin-top: 50px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign In</div>
                <div style="float: right; font-size: 80%; position: relative; top: -10px">
                    <a href="#" onclick=" $('#loginbox').hide(); $('#signupbox').show(); ">
                        Sign Up Here
                    </a>
                    <a href="#">Forgot password?</a>
                </div>
            </div>
            <div style="padding-top: 30px" class="panel-body">

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Partial("_ExternalLoginsListPartial", new {Action = "ExternalLogin", ViewBag.ReturnUrl})
                        <hr />
                    </div>
                </div>

                <div style="display: none" id="login-alert" class="alert alert-danger col-sm-12"></div>
                <form id="loginform1" class="form-horizontal" role="form">
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input id="txtEmail" type="text" class="form-control" name="txtEmail" placeholder="Email" data-validation="email,required,alphanumeric">
                    </div>
                    <div style="margin-bottom: 25px" class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        <input id="txtpassword" type="password" class="form-control" name="txtpassword" placeholder="password" data-validation="length,required" data-validation-length="min6">
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="chkremember" type="checkbox" name="chkremember" value=""> Remember me
                            </label>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-9 col-md-3">
                            <input id="btn-login" class="btn btn-success" type="submit" value="Log in" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div id="signupbox" style="display: none; margin-top: 50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Sign Up</div>
                <div style="float: right; font-size: 85%; position: relative; top: -10px"><a id="signinlink" href="#" onclick=" $('#signupbox').hide(); $('#loginbox').show(); ">Sign In</a></div>
            </div>
            <div style="padding-top: 30px" class="panel-body">

                <div class="form-group">
                    <div class="col-md-12">
                        @Html.Partial("_ExternalLoginsListPartial", new { Action = "ExternalLogin", ViewBag.ReturnUrl })
                        <hr />
                    </div>
                </div>

                <form id="signupform" class="form-horizontal" role="form">

                    <div id="signupalert" style="display: none" class="alert alert-danger">
                        <p>Error:</p>
                        <span></span>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="text" class="form-control" id="txtEmail" name="txtEmail" placeholder="Email Address">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="password" class="form-control" name="txtPassword" id="txtPassword" placeholder="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <input type="password" class="form-control" name="txtConfirmPassword" id="txtConfirmPassword" placeholder="Confirm Password">
                        </div>
                    </div>
                    <div class="input-group">
                        <div class="checkbox">
                            <label>
                                <input id="chkisBussiness" type="checkbox" name="chkisBussiness" value="">Are you a Bussiness
                            </label>
                        </div>
                    </div>
                    <hr />
                    <div class="form-group">
                        <!-- Button -->
                        <div class="col-md-offset-9 col-md-3">
                            <input id="btn-signup" class="btn btn-success" type="submit" value="Sign Up" />
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">

    $.validate({
        
    });

</script>